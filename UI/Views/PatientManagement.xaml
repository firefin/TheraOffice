<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.PatientManagement"
             Title="Patient Management">
    <VerticalStackLayout>
        <ListView
            ItemsSource="{Binding Patients}"
            SelectedItem="{Binding SelectedPatient}">
            
        </ListView>
        <Button Grid.Row="0" Text="Add New Patient" Clicked="AddNewPatient_Clicked"/>
        <Button Grid.Row="1" Text="Edit Patient" Clicked="EditPatient_Clicked"/>
        <Button Grid.Row="3" Text="Exit" Clicked="Exit_Clicked"/>
    </VerticalStackLayout>
</ContentPage>